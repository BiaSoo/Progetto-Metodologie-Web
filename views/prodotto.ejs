<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/style.css">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <title><%= product.Nome %> - BeSure Farmacia</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    
    <style>
        td {border-color:rgb(25, 143, 101);border-width: 1px;}
        h1 {font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;}
    </style>
</head>
<body>
    <%- include('navbar', { user: user }) %>
    <!--Pagina-->
    <div class="container mt-5">
        <font face="Calibri" align="center">   
            <h2><%= product.Nome %></h2>
        </font>
        
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img src="<%= product.image %>" width="100%" alt="<%= product.Nome %>">
                </div>
                <div class="col-md-6">
                    <h3>Prezzo: €<%= product.Prezzo %></h3>
                    <p>Categoria: <%= product.Categoria %></p>
                    <p>Descrizione: <%= product.Descrizione %></p>
                    <div class="d-flex align-items-center mt-3">
                        <button class="btn btn-outline-secondary" id="decrease-quantity">-</button>
                        <input type="number" id="quantity" class="form-control mx-2" value="1" min="1" style="width: 70px;" readonly>
                        <button class="btn btn-outline-secondary" id="increase-quantity">+</button>
                    </div>
                    <button class="btn btn-success mt-3" id="add-to-cart">Aggiungi al carrello</button>
                    <p id="error-message" class="text-danger mt-2" style="display: none;"></p>
                </div>
            </div>
        </div>
    </div>    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const decreaseButton = document.getElementById('decrease-quantity');
            const increaseButton = document.getElementById('increase-quantity');
            const quantityInput = document.getElementById('quantity');
            const addToCartButton = document.getElementById('add-to-cart');
            const errorMessage = document.getElementById('error-message');
            const productId = <%= product.ID %>; // Passa il valore come numero
            const sessionId = "<%= sessionID %>";

            decreaseButton.addEventListener('click', () => {
                const currentQuantity = parseInt(quantityInput.value, 10);
                if (currentQuantity > 1) {
                    quantityInput.value = currentQuantity - 1;
                    errorMessage.style.display = 'none';
                }
            });

            increaseButton.addEventListener('click', () => {
                quantityInput.value = parseInt(quantityInput.value, 10) + 1;
                errorMessage.style.display = 'none';
            });

            addToCartButton.addEventListener('click', async () => {
                const quantity = parseInt(quantityInput.value, 10);
                if (quantity < 1) {
                    errorMessage.textContent = 'Impossibile inserire un articolo di quantità zero!';
                    errorMessage.style.display = 'block';
                    return;
                }

                try {
                    const response = await fetch('/aggiungi_al_carrello', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId, quantity, sessionId })
                    });

                    const result = await response.json();
                    if (result.success) {
                        alert('Prodotto aggiunto al carrello!');
                    } else {
                        errorMessage.textContent = result.message || 'Errore durante l\'aggiunta al carrello.';
                        errorMessage.style.display = 'block';
                    }
                } catch (error) {
                    errorMessage.textContent = 'Errore durante l\'aggiunta al carrello.';
                    errorMessage.style.display = 'block';
                }
            });
        });
    </script>
</body>
</html>