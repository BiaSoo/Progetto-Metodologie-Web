<nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="/images/logo.jpeg" width="100" alt="BeSure Farmacia">
        </a>

        <!-- Barra di ricerca -->
        <div class="search-bar-container flex-grow-1">
            <form class="form-outline d-flex" action="/ricerca" method="GET">
                <input class="form-control" type="search" placeholder="Ricerca" aria-label="Ricerca" name="query">
                <button class="btn btn-outline-success" type="submit">Cerca</button>
            </form>
        </div>

        <!-- Bottoni sempre visibili -->
        <div class="ms-auto d-flex align-items-center">
            <% if (user && user.Email === 'admin@example.com') { %>
                <a href="/area_riservata" class="btn btn-outline-success me-2">
                    <i class="bi bi-person-fill-gear"></i>
                </a>
                <a href="/logout" class="btn btn-outline-danger">Logout</a>
            <% } else if (user) { %>
                <a href="/carrello" class="btn btn-outline-success me-2">
                    <i class="bi bi-cart"></i>
                </a>
                <a href="/wishlist" class="btn btn-outline-warning me-2">
                    <i class="bi bi-heart"></i>
                </a>
                <a href="/mio_account" class="btn btn-outline-primary me-2">
                    <i class="bi bi-person-circle"></i>
                </a>
                <a href="/logout" class="btn btn-outline-danger">Logout</a>
            <% } else { %>
                <a href="/carrello" class="btn btn-outline-success me-2">
                    <i class="bi bi-cart"></i>
                </a>
                <a href="/registrazione" class="btn btn-outline-success me-2">Registrati</a>
                <a href="/accesso" class="btn btn-outline-success">Accedi</a>
            <% } %>
        </div>
    </div>
</nav>

